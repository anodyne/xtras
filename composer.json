{
	"require": {
		"laravel/framework": "4.2.*",
		"league/flysystem": "~0.4",
		"league/fractal": "~0.8",
		"aws/aws-sdk-php": "~2.0",
		"erusev/parsedown": "~1.0",
		"ikimea/browser": "~1.0",
		"laracasts/presenter": "~0.1",
		"guzzlehttp/guzzle": "~4.0",
		"zizaco/entrust": "1.2.*",
		"forxer/Gravatar": "~1.2",
		"intervention/image": "~2.0",
		"iron-io/iron_mq": "1.5.*",
		"dingo/api": "~0.1"
	},

	"require-dev": {
		"raveren/kint": "dev-master",
		"fzaninotto/faker": "*",
		"barryvdh/laravel-debugbar": "1.*"
	},
	
	"autoload": {
		"classmap": [
			"Anodyne/Xtras/database/migrations",
			"Anodyne/Xtras/database/seeds"
		],
		
		"psr-4": {
			"Xtras\\": "Anodyne\\Xtras\\Web",
			"Xtras\\Api\\": "Anodyne\\Xtras\\Api",
			"Xtras\\Extensions\\": "Anodyne\\Xtras\\Extensions",
			"Xtras\\Foundation\\": "Anodyne\\Xtras\\Foundation"
		}
	},
	
	"config": {
		"preferred-install": "dist",
		"process-timeout": 500
	},

	"minimum-stability": "dev",
	"prefer-stable": true
}