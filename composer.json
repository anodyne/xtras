{
	"require": {
		"laravel/framework": "4.1.*",
		"league/flysystem": "*",
		"aws/aws-sdk-php": "~2.0",
		"dflydev/markdown": "~1.0",
		"ikimea/browser": "~1.0",
		"league/fractal": "*",
		"laracasts/presenter": "*",
		"dingo/api": "*"
	},

	"require-dev": {
		"raveren/kint": "dev-master",
		"fzaninotto/faker": "*"
	},
	
	"autoload": {
		"classmap": [
			"Xtras/database/migrations",
			"Xtras/database/seeds"
		],
		
		"psr-4": {
			"Xtras\\": "Xtras"
		}
	},
	
	"config": {
		"preferred-install": "dist",
		"process-timeout": 500
	},

	"minimum-stability": "dev",
	"prefer-stable": true
}