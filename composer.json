{
	"require": {
		"laravel/framework": "4.2.*",
		"league/flysystem": "~0.4",
		"aws/aws-sdk-php": "~2.0",
		"erusev/parsedown": "~1.0",
		"ikimea/browser": "~1.0",
		"laracasts/presenter": "~0.1",
		"guzzlehttp/guzzle": "~4.0"
	},

	"require-dev": {
		"raveren/kint": "dev-master",
		"fzaninotto/faker": "*"
	},
	
	"autoload": {
		"classmap": [
			"Xtras/database/migrations",
			"Xtras/database/seeds"
		],
		
		"psr-4": {
			"Xtras\\": "Xtras\\Web",
			"Xtras\\Api\\": "Xtras\\Api",
			"Xtras\\Extensions\\": "Xtras\\Extensions"
		}
	},
	
	"config": {
		"preferred-install": "dist",
		"process-timeout": 500
	},

	"minimum-stability": "dev",
	"prefer-stable": true
}